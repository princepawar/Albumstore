<body>
  <div class="container">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'form-newpassword' }) do |f| %>
        <%= devise_error_messages! %>
        <h2 class="form-newpassword-heading">Forgot your password?</h2>
        <div class="field">
          <%= f.label :email, class:"sr-only" %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email address" %>
        </div>

        <div class="actions">
          <%= f.submit "Send reset password instructions", class:"btn btn-lg btn-primary btn-block"%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</body>
