    </tr>
      <% @failure_student.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.math %></td>
          <td><%= student.science %></td>
          <td><%= student.english %></td>
          <td><%= student.percentage %> %</td>
        </tr>
